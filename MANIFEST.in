# Include documentation
include README.md
include LICENSE
include requirements.txt

# Include package data
recursive-include core/migrations *.py
recursive-include accounts/migrations *.py
recursive-include core/templates *
recursive-include accounts/templates *
recursive-include core/static *
recursive-include accounts/static *

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.swp
global-exclude *.swo

# Exclude development and build artifacts
prune venv
prune .git
prune build
prune dist
prune *.egg-info
exclude .gitignore
exclude manage.py
exclude rbac_project/*
